<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/download_notification_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/download_notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="爱奇艺头条" />

        <ProgressBar
            android:id="@+id/download_notification_downloadprogress"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/download_notification_title"
            android:layout_centerVertical="true"
            android:max="100"
            android:progress="100" />


        <TextView
            android:id="@+id/download_notification_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/download_notification_downloadprogress"
            android:text="16.6MB/30MB"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/download_notification_downloadseep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/download_notification_downloadprogress"
            android:text="300kB/s"
            android:textSize="12dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/download_notification_pausebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="#999999"
        android:clickable="true"
        android:padding="5dp"
        android:text="暂停" />

    <TextView
        android:id="@+id/download_notification_cancelbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#eeeeee"
        android:clickable="true"
        android:padding="5dp"
        android:text="取消" />

</LinearLayout>